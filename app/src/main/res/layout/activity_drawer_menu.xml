<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Üst bölüm -->
    <RelativeLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <!-- Kullanıcı fotoğrafı -->
        <ImageView
            android:id="@+id/userPhotoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/my_photo"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/schoolNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userPhotoImageView"
            android:layout_marginTop="8dp"
            android:text="202013709051"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/schoolNumberTextView"
            android:layout_marginTop="4dp"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            android:text="Emircan Öz"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topSection"
        android:orientation="vertical">

        <Button
            android:id="@+id/baslikEkleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Başlık Ekle"
            android:textSize="24sp"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/fotografEkleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fotoğraf Ekle"
            android:textSize="24sp"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/galeriButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galeri"
            android:textSize="24sp"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/hakkindaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hakkında"
            android:textSize="24sp"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/cikisButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Çıkış"
            android:textSize="24sp"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

</RelativeLayout>
